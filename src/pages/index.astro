    <div class="flex flex-row items-center justify-between align-top mr-15">
      <div class="text-center w-2/3 mx-4 md:w-1/2">
        <h1
          class="text-5xl md:text-6xl text-center drop-shadow-[0px_35px_35px_rgba(39,245,131,0.6)]"
