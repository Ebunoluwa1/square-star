          {/* Phone */}
          <a href="tel:+2348163564606">
            <FontAwesomeIcon
              icon={faPhone}
              className="w-8 h-8 hover:text-slate-200 text-slate-700"
            />
          </a>
        </div>
        <!-- Blogs -->
        <div>
          <blogList />
        </div>
      </div>

      <div class="mr-1">
        <!-- right -->
        <img
          height="400"
