---
import "@fontsource/poppins";
import Layout from "../layouts/Layout.astro";
import { FontAwesomeIcon } from "@fortawesome/react-fontawesome";
import { faEnvelope, faPhone } from "@fortawesome/free-solid-svg-icons";
import {
  faLinkedin,
  faGithub,
  faTwitter,
} from "@fortawesome/free-brands-svg-icons";
---

<Layout>
  <div class="container mx-auto">
    <h2 class="text-2xl font-semibold text-center mb-4">Contact Me</h2>

    <form id="contactForm" class="max-w-lg mx-auto p-6 shadow-lg rounded-lg">
      <!-- Success/Error Message Box -->
      <div id="messageBox" class="hidden text-center p-3 rounded-md mb-4"></div>

      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-amber-50"
          >Your Name</label
        >
        <input
          type="text"
          name="name"
          id="name"
          required
          class="mt-1 p-2 w-full border-amber-50 border-b-2 rounded-md focus:ring focus:ring-indigo-300"
        />
      </div>

      <div class="mb-4">
        <label for="email" class="block text-sm font-medium text-amber-50"
          >Your Email</label
        >
        <input
          type="email"
          name="email"
          id="email"
          required
          class="mt-1 p-2 w-full border-amber-50 border-b-2 rounded-md focus:ring focus:ring-indigo-300"
        />
      </div>

      <div class="mb-4">
        <label for="message" class="block text-sm font-medium text-amber-50"
          >Your Message</label
        >
        <textarea
          name="message"
          id="message"
          required
          class="mt-1 p-2 w-full border-amber-50 border-b-2 text-amber-50 rounded-md focus:ring focus:ring-indigo-300"
        ></textarea>
      </div>

      <button
        type="submit"
        class="w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700"
        >Send Message</button
      >
    </form>

    <!-- socialmedia icons -->
    <div class="flex flex-row gap-5 items-center justify-center mt-4">
      {/* LinkedIn */}
      <a
        href="https://www.linkedin.com/in/ebunoluwa-oni-6929731a9"
        target="_blank"
        rel="noopener noreferrer"
      >
        <FontAwesomeIcon
          icon={faLinkedin}
          className="w-8 h-8 hover:text-slate-200 text-slate-700"
        />
      </a>

      {/* GitHub */}
      <a
        href="https://github.com/Ebunoluwa1/"
        target="_blank"
        rel="noopener noreferrer"
      >
        <FontAwesomeIcon
          icon={faGithub}
          className="w-8 h-8 hover:text-slate-200 text-slate-700"
        />
      </a>

      {/* Gmail (Envelope) */}
      <a href="mailto:ebuntoday@gmail.com">
        <FontAwesomeIcon
          icon={faEnvelope}
          className="w-8 h-8 hover:text-slate-200 text-slate-700"
        />
      </a>
      {/* twitter (X) */}
      <a href="https://twitter.com/OniEbunoluwa3?s=09">
        <FontAwesomeIcon
          icon={faTwitter}
          className="w-8 h-8 hover:text-slate-200 text-slate-700"
        />
      </a>

      {/* Phone */}
      <a href="tel:+2348163564606">
        <FontAwesomeIcon
          icon={faPhone}
          className="w-8 h-8 hover:text-slate-200 text-slate-700"
        />
      </a>
    </div>
  </div>

  <script src="/form.js" type="module"></script>
</Layout>
